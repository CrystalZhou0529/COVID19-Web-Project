                value: remained.find('henan')
            }, {
                name: '湖南',
                value: remained.find('hunan')
            }, {
                name: '安徽',
                value: remained.find('anhui')
            }, {
                name: '江西',
                value: remained.find('jiangxi')
            }, {
                name: '山东',
                value: remained.find('shandong')
            }, {
                name: '重庆',
                value: remained.find('chongqin')
            }, {
                name: '四川',
                value: remained.find('sichuan')
            }, {
